{
  "name": "dev.rinodrummer.calendar",
  "version": "1.0.0",
  "main": "dist-electron/main/index.js",
  "description": "Simple calendar app to reserve and manage appointments",
  "author": "Gennaro Landolfi <code@rinodrummer.dev>",
  "license": "MIT",
  "type": "module",
  "private": true,
  "keywords": [
    "calendar",
    "electron",
    "rollup",
    "vite",
    "vue3",
    "vue",
    "fullcalendar"
  ],
  "homepage": "https://github.com/rinodrummer/electron-calendar",
  "repository": {
    "type": "git",
    "url": "https://github.com/rinodrummer/electron-calendar.git"
  },
  "debug": {
    "env": {
      "VITE_DEV_SERVER_URL": "http://127.0.0.1:3344/"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build && electron-builder",
    "preview": "vite preview",
    "rebuild": "electron-rebuild -f -w sqlite",
    "postinstall": "electron-builder install-app-deps"
  },
  "imports": {
    "#root/*": "./*",
    "#src/*": "./src/*",
    "#electron/*": "./src/electron/*",
    "#renderer/*": "./src/renderer/*"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "@fullcalendar/core": "^6.1.14",
    "@fullcalendar/daygrid": "^6.1.14",
    "@fullcalendar/interaction": "^6.1.14",
    "@fullcalendar/list": "^6.1.14",
    "@fullcalendar/luxon3": "^6.1.14",
    "@fullcalendar/timegrid": "^6.1.14",
    "@fullcalendar/vue3": "^6.1.14",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.13",
    "@types/luxon": "^3.4.2",
    "@types/sqlite3": "^3.1.11",
    "@vitejs/plugin-vue": "^5.0.5",
    "autoprefixer": "^10.4.19",
    "electron": "^30.1.0",
    "electron-builder": "^24.13.3",
    "electron-log": "^5.1.5",
    "electron-updater": "^6.2.1",
    "luxon": "^3.4.4",
    "postcss": "^8.4.38",
    "tailwind-merge": "^2.3.0",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5",
    "vite": "^5.2.13",
    "vite-plugin-electron": "^0.28.7",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-plugin-vue-devtools": "^7.2.1",
    "vue": "^3.4.27",
    "vue-tsc": "^2.0.21"
  },
  "dependencies": {
    "sqlite": "^5.1.1",
    "sqlite3": "npm:sqlite3-offline-next@^5.0.3"
  }
}
